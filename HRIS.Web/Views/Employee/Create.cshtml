@using HRIS.Model.Sys;
@using HRIS.Model.MasterFile;
@model EmployeeBasicInfoModel
@{
    ViewBag.Title = "New Employee";
    bool confidential = Model.confidential;

}
@Html.AdminHeader("New Employee", @<text><a href="@Url.Action(confidential ? "EmployeeConfi" : "EmployeeNonConfi")" class="k-button pull-right">Back to list</a></text>)
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm())
        {
            <div class="form-horizontal" role="form">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-warning">
                        @Html.ValidationSummary(false)
                    </div>
                }
                @Html.HiddenFor(model => model.confidential)
                <div class="form-group">
                    @Html.LabelFor(model => model.firstName, new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.Kendo().TextBoxFor(model => model.firstName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.middleName, new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.Kendo().TextBoxFor(model => model.middleName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.lastName, new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.Kendo().TextBoxFor(model => model.lastName)
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    @Html.LabelFor(model => model.birthDate, new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.Kendo().DatePickerFor(model => model.birthDate).HtmlAttributes(new { @class= "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.gender, new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.Kendo().DropDownListFor(model => model.gender).BindTo(Model.GenderList).SetReferenceSettings().OptionLabel("select").HtmlAttributes(new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.maritalStatus, new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.Kendo().DropDownListFor(model => model.maritalStatus).BindTo(Model.MaritalStatusList).SetReferenceSettings().OptionLabel("select")
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.email, new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.Kendo().TextBoxFor(model => model.email)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.contact1, new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.Kendo().TextBoxFor(model => model.contact1)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.contact2, new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.Kendo().TextBoxFor(model => model.contact2)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.contact3, new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.Kendo().TextBoxFor(model => model.contact3)
                    </div>
                </div>
                @Html.AdminHeader("Address Information")
                <div class="form-group">
                    @Html.LabelFor(model => model.address1, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Kendo().TextBoxFor(model => model.address1)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.address2, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Kendo().TextBoxFor(model => model.address2)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.address3, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Kendo().TextBoxFor(model => model.address3)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.countryId, new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.Kendo().DropDownListFor(model => model.countryId).DataValueField("id").DataTextField("description").BindTo(Model.CountryList).OptionLabel("select")
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.city, new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.Kendo().TextBoxFor(model => model.city)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.postalCode, new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.Kendo().TextBoxFor(model => model.postalCode)
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="k-button">Save</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
