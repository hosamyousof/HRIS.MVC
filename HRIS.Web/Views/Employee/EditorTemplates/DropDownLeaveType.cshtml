@using HRIS.Model.Sys;
@using HRIS.Service.Sys;
@model ReferenceModel
@{
    var data = DependencyResolver.Current.GetService<HRIS.Service.Configuration.IApplicationRequestTypeService>().GetLeaveTypeList();
    Html.Kendo().DropDownListFor(model => model)
        .BindTo(data)
        .OptionLabel("select")
        .DataValueField("value").DataTextField("description")
        .Render();
}